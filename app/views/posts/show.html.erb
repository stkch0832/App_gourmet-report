<section class="detail detail__inner">
  <div class="d-flex align-items-center head">
    <div class="head__left">
      <img class="head__user-img" src="<%= "/user_images/#{@user.image_name}" %>" alt="">
    </div>
    <div class="head__center flex-grow-1">
      <p class="head__user-name">
      <%= @user.name %>
      </p>
      <%= l @post.created_at%>
    </p>
    </div>
    <div class="head__right">
      <p class="head__right-like">♥ 100</p>
    </div>
  </div>
  <div class="d-flex body">
    <div class="body__left">
      <li class="body-l__shop-name">
        <p>店舗名</p>
        <%= @post.shop_name%>
      </li>
      <li class="body-l__area-name">
        <p>地域・最寄り駅</p>
        <%= @post.area_name%>
      </li>
      <li class="body-l__comment">
        <p>コメント</p>
        <%= @post.comment%>
      </li>
    </div>
    <div class="body__right">
      <li class="body-r__shop-category">
      <p>店舗カテゴリー</p>
      <%= @post.shop_category %>
      </li>
      <li class="body-r__product-category">
      <p>商品カテゴリー</p>
      <%= @post.product_category %>
      </li>
      <li class="body-r__tag">tag</li>
    </div>
  </div>
  <div class="d-flex body__bottom">
    <div class="body__bottom-img">
      <p>image</p>
      <img src="" alt="">
    </div>
    <div class="body__bottom-btn">
      
      <%= link_to("編集","/posts/#{@post.id}/edit", {class: "btn btn-primary btn-lg"}) %>
      <%= link_to("削除","/posts/#{@post.id}/destroy", {method: "post", class: "btn btn-danger btn-lg"}) %>
    </div>
  </div>
</section>